{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "strict": true,
    "types": ["react", "react-dom"],
    "lib": ["DOM", "ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": [
    "app/**/*",
    "scripts/**/*",
    "globals.d.ts"
  ]
}